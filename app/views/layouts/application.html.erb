      <ul class="nav">
        <li class="active"><a href="/ideas">Ideas</a></li>
      </ul>
    </div>
  </div>
</div>
<div class="container">
  <%= yield %>
</div>
<footer>
  <div class="container">
    Rails Girls 2012
  </div>
</footer>
</body>
</html>
